<h1>Login</h1>

<p>Enter your credentials to connect or
 <%= link_to "create your account", signup_path %>
 if it's not allready done.
</p>

<p id="alert"><%= alert %></p>

<%= form_tag sessions_path do |form| %>
  <div class="field">
    <%= label_tag :login %>
    <%= text_field_tag :login %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
<% end %>
