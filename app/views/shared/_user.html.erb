<% if !current_user %>
	<div class="raw">
		<div class="col-md-10 text-right">
			<%= button_to "Create account", signup_path, :id => "back-to-books-btn", :class => "btn btn-secondary", :method => :get %>
		</div>
		<div class="col-md-2">
			<%= button_to "Login", login_path, :id => "back-to-books-btn", :class => "btn btn-primary", :method => :get %>
		</div>
	</div>
<% else %>
	<div class="raw">
		<div class="col-md-10 user-profile">
        <%= link_to 'Hello  ' + current_user.login, current_user %>
		</div>
		<div class="col-md-2">
			<%= button_to "Logout", logout_path, :id => "back-to-books-btn", :class => "btn btn-primary", :method => :get %>
		</div>
	</div>
<% end %>
