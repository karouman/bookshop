<h1>Books</h1>

<div class="row">
  <div class="col-md-4">Title</div>
  <div class="col-md-4">Library</div>
  <div class="col-md-4">Genre</div>
</div>

<% @books.each do |book| %>
  <div class="row">
    <div class="col-md-4"><%= link_to book.title, book_path(book) %></div>
    <div class="col-md-4"><%= link_to book.library.name, library_path(book.library) %></div>

  <div class="col-md-4">
    <% book.genres.each do |genre| %>
      <kbd><%=  link_to genre.title, genre_path(genre) %></kbd>
    <% end %>
  </div>
  </div>
<% end %>
